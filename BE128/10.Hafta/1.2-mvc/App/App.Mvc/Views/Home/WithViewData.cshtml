<table class="table tabled-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @if (data is null)
        {
            <tr>
                <td colspan="3">Data is null</td>
            </tr>
        }
        else if (data.Count == 0)
        {
            <tr>
                <td colspan="3">No Data</td>
            </tr>
        }
        else
        {
            @foreach (var product in data)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        }
    </tbody>

</table>