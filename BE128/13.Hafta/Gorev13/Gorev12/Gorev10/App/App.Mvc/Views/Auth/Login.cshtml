@{
    ViewData["Title"] = "Giriþ Yap";
}
<div class="container py-5">
    <h2>Giriþ Yap</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <form asp-action="Login" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Þifre</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Þifre" required />
        </div>
        <button type="submit" class="btn btn-success">Giriþ Yap</button>
    </form>
</div>
