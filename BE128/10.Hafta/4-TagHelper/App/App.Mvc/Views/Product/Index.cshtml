@model ProductViewModel

<h2>Ürün Ekle</h2>

@* ViewBag.SuccessMessage 'ın içi boş değilse; *@

@if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@* ViewBag.ErrorMessage 'ın içi boş değilse; *@

@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (!string.IsNullOrWhiteSpace(ViewBag.Welcome))
{
    <div class="alert alert-warning">@ViewBag.Welcome</div>
}


<form method="post" asp-controller="Product" asp-action="Index" >
    <div class="m-3">
        <label asp-for="Id">ID : </label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="m-3">
        <label asp-for="Name">Name : </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="m-3">
        <label asp-for="Price">Price : </label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>