@model List<App.Models.DTO.ProductDto>
<div class="container">
    <h1>Ürün Listesi</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Fiyat</th>
                <th>Satıcı</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td><!-- Satıcı DTO'da yok: gerekirse eklenmeli --></td>
                    <td><!-- Enabled alanı DTO'da yok: eklenmesi gerekebilir --></td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Product" asp-action="Disable" asp-route-productId="@p.Id">Pasif Yap</a>
                        <a class="btn btn-sm btn-success" asp-controller="Product" asp-action="Enable" asp-route-productId="@p.Id">Aktif Yap</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
