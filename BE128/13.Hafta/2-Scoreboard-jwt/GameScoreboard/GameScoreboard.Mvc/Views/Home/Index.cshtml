@model List<HighScoreViewModel>

<div class="container">
    <h1>Scoreboard</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>#</td>
                <td>Nickname</td>
                <td>Score</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <td>@(i+1)</td>
                    <td>@item.Nickname</td>
                    <td>@item.Score</td>
                </tr>
            }
        </tbody>
    </table>
</div>