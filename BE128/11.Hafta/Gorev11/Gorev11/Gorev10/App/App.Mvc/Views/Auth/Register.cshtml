@{
    ViewData["Title"] = "Kayýt Ol";
}
<div class="container py-5">
    <h2>Kayýt Ol</h2>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Adýnýz</label>
            <input type="text" class="form-control" id="name" placeholder="Adýnýz">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            <input type="email" class="form-control" id="email" placeholder="E-posta">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Þifre</label>
            <input type="password" class="form-control" id="password" placeholder="Þifre">
        </div>
        <button type="submit" class="btn btn-primary">Kayýt Ol</button>
    </form>
</div>
